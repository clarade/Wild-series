{% extends "base.html.twig" %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category </h1>
    {% for category in categories %}
        <div>
            <h2>
            <a href="{{ path('category_show', {categoryName: category.name}) }}">Voir les séries de cette catégorie
            {{ loop.index }} | {{ category.name }}
            </a>
            </h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}